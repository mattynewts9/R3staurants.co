<h1>My Bookings</h1>
<% if @bookings.empty?%>
  <p>You have no bookings at this time</p>
<% else %>
  <% @bookings.each do |booking| %>
    <div class="booking-card border p-3 my-2">
      <%= link_to booking_path(booking) do  %>
        <h2><%= booking.restaurant.name %></h2>
        <p><%= booking.date %></p>
      <% end %>
    </div>
  <% end %>
<% end %>
