<h2 class="text-center">Sign Up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
  <%= f.error_notification class: 'alert alert-danger' %>

  <div class="form-inputs mb-4">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: "Email",
                input_html: { autocomplete: "email", placeholder: "Enter your email", class: "form-control" } %>

    <%= f.input :first_name,
                required: true,
                label: "First Name",
                input_html: { autocomplete: "first_name", placeholder: "Enter your first name", class: "form-control" } %>

    <%= f.input :last_name,
                required: true,
                label: "Last Name",
                input_html: { autocomplete: "last_name", placeholder: "Enter your last name", class: "form-control" } %>

    <%= f.input :photo, as: :file, required: true,
                label: "Profile Picture",
                hint: "Upload your profile picture (jpg, png, max 2MB)",
                input_html: { class: "form-control-file" } %>

    <%= f.input :password,
                required: true,
                label: "Password",
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "Create a password", class: "form-control" } %>

    <%= f.input :password_confirmation,
                required: true,
                label: "Confirm Password",
                input_html: { autocomplete: "new-password", placeholder: "Re-enter your password", class: "form-control" } %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Sign Up", class: "btn btn-primary", data: { disable_with: "Signing up..." } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
