<!-- Display Restaurant Information -->
<h1><%= @restaurant.name %></h1>
<p><strong>Location:</strong> <%= @restaurant.location %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>

<!-- Button to Go to Booking Form -->
<%= link_to 'Book Now', new_restaurant_booking_path(@restaurant), class: "btn btn-primary mt-3" %>

<!-- Button to Show All Restaurants -->
<%= link_to 'Back to All Restaurants', restaurants_path, class: "btn btn-secondary mt-3 ms-2" %>

<!-- Display Additional Restaurant Information -->
<div class="mt-4">
  <%= image_tag @restaurant.image_url, class: "img-fluid" %>
  <h2 class="mt-3"><%= @restaurant.name %></h2>
  <p><strong>Description:</strong> <%= @restaurant.description %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>
</div>

<!-- Another Back to All Restaurants Button (optional, you can remove this if redundant) -->
<%= link_to 'Back to All Restaurants', restaurants_path, class: "btn btn-secondary mt-3" %>
