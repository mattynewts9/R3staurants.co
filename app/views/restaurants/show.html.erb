<div class="restaurant-container">
  <p class="description font-cursive"> <%= @restaurant.description %></p>
  <div class="banner">
    <%= image_tag @restaurant.image_url %>
    <div class="info" >
      <h2 class="mt-3"><%= @restaurant.name %></h2>
      <p><%= @restaurant.category %></p>
    </div>
  </div>

  <h2>Reviews</h2>
  <div class="review-container">
    <% @restaurant.reviews.each do |review| %>
      <div class="review">
        <p><%= review.comments %></p>
        <p><%= '⭐️' * review.rating %></p>
      </div>
    <% end %>
  </div>

  <!-- Button to Go to Booking Form -->
  <%= link_to 'Book Now', new_restaurant_booking_path(@restaurant), class: "btn btn-primary mt-3" %>

  <!-- Button to Show All Restaurants -->
  <%= link_to 'Back to All Restaurants', restaurants_path, class: "btn btn-secondary mt-3 ms-2" %>
</div>
